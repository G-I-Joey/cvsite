<div class="container homepage">
  <!-- Colonne gauche -->
  <section>
    <h3>Compétences</h3>
    <div class="skills-carousel">
      <% @skills.each do |skill| %>
        <div class="skill-card">
          <p><%= skill.name %></p>
          <small><%= skill.level %></small>
        </div>
      <% end %>
    </div>
  </section>

  <!-- Colonne centrale -->
  <section>
    <h1>Joey Collier</h1>
    <h2>Développeur d’applications Fullstack</h2>

    <section class="about">
      <p>
        Passionné par le développement web, je suis en formation pour devenir
        Développeur Fullstack. Curieux, persévérant et motivé, je cherche à
        mettre en pratique mes compétences à travers des projets concrets et
        utiles.
      </p>
  </section>

  <section class="projects">
    <h3>Mes projets</h3>
    <% @projects.each do |project| %>
      <div class="project-card">
        <h4><%= project.title %></h4>
        <p><%= project.description %></p>
        <% if project.link.present? %>
          <p><a href="<%= project.link %>" target="_blank">Voir le projet</a></p>
        <% end %>
        <p><em><%= project.start_date %> - <%= project.end_date || "En cours" %></em></p>
      </div>
    <% end %>
  </section>

  <!-- Colonne droite -->
  <section class="experiences">
    <h3>Expériences professionnelles</h3>
    <% @experiences.each do |exp| %>
      <div class="experience-card">
        <h4><%= exp.title %> - <%= exp.company %></h4>
        <p><%= exp.description %></p>
        <p><em><%= exp.start_date %> - <%= exp.end_date || "Aujourd’hui" %></em></p>
      </div>
    <% end %>
  </section>

  <section class="education">
    <h3>Formations</h3>
    <% @educations.each do |edu| %>
      <div class="education-card">
        <h4><%= edu.degree %> - <%= edu.field %></h4>
        <p><strong><%= edu.school %></strong></p>
        <p><%= edu.description %></p>
        <p><em><%= edu.start_date %> - <%= edu.end_date %></em></p>
      </div>
    <% end %>
  </section>

</div>
